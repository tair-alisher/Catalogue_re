@model Catalogue_re.Web.Models.ViewModels.DepartmentVM

@{
    ViewBag.Title = "Просмотр отдела";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="header">
                    <h2>Просмотр отдела</h2>
                </div>
                <div class="content">
                    <div>
                        <hr />
                        <dl class="dl-horizontal">
                            <!-- Field AdministrationName -->
                            <dt>
                                @Html.DisplayNameFor(model => model.Administration.Name)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Administration.Name)
                            </dd>
                            <!-- Field DepartmentName -->
                            <dt>
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Name)
                            </dd>
                            <!-- Field DepartmentPost -->
                            <dt>
                                @Html.DisplayNameFor(model => model.Post)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Post)
                            </dd>
                            <!-- Field DepartmentAddress -->
                            <dt>
                                @Html.DisplayNameFor(model => model.Address)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Address)
                            </dd>
                            <!-- Field DepartmentFax -->
                            <dt>
                                @Html.DisplayNameFor(model => model.Fax)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Fax)
                            </dd>
                            <!-- Field DepartmentEMail -->
                            <dt>
                                @Html.DisplayNameFor(model => model.Email)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Email)
                            </dd>
                            <!-- Field DepartmentSkype -->
                            <dt>
                                @Html.DisplayNameFor(model => model.Skype)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Skype)
                            </dd>
                            <!-- Field DepartmentCode -->
                            <dt>
                                @Html.DisplayNameFor(model => model.Code)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Code)
                            </dd>
                        </dl>
                    </div>
                    <!-- Buttons Edit and Back -->
                    <p>
                        <a class="btn btn-default" name="editButton" id="editButton" href="@Url.Action("Edit","Department", new {id = Model.Id})">Редактировать</a> |
                        <a class="btn btn-default" name="backButton" id="backButton" href="@Url.Action("Index","Department")">Назад</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>