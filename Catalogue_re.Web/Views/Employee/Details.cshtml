@model Catalogue.Models.Tables.Employee

@{
    ViewBag.Title = "Просмотр сотрудника";
    Layout = "~/Views/Shared/_AminPanel.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="header">
                    <h2>Просмотр сотрудника</h2>
                </div>
                <div class="content">
                    <div>
                        <hr />
                        <dl class="dl-horizontal">
                            <!-- Field EmployeePhoto -->
                            <dt style="width: 200px;">
                                @Html.DisplayNameFor(model => model.EmployeePhoto)
                            </dt>
                            <dd style="margin-left: 15%;">
                                <img src="~/images/@Model.EmployeePhoto" width="100" height="100" />
                            </dd>
                            <!-- Field DepartmentName -->
                            <dt style="width: 200px;">
                                @Html.DisplayNameFor(model => model.Department.DepartmentName)
                            </dt>
                            <dd style="margin-left: 15%;">
                                @Html.DisplayFor(model => model.Department.DepartmentName)
                            </dd>
                            <!-- Field PositionName -->
                            <dt style="width: 200px;">
                                @Html.DisplayNameFor(model => model.Position.PositionName)
                            </dt>
                            <dd style="margin-left: 15%;">
                                @Html.DisplayFor(model => model.Position.PositionName)
                            </dd>
                            <!-- Field EmployeeFullName -->
                            <dt style="width: 200px;">
                                @Html.DisplayNameFor(model => model.EmployeeFullName)
                            </dt>
                            <dd style="margin-left: 15%;">
                                @Html.DisplayFor(model => model.EmployeeFullName)
                            </dd>
                            <!-- Field EmployeeRoom -->
                            <dt style="width: 200px;">
                                @Html.DisplayNameFor(model => model.EmployeeRoom)
                            </dt>
                            <dd style="margin-left: 15%;">
                                @Html.DisplayFor(model => model.EmployeeRoom)
                            </dd>
                            <!-- Field EmployeeAddress -->
                            <dt style="width: 200px;">
                                @Html.DisplayNameFor(model => model.EmployeeAddress)
                            </dt>
                            <dd style="margin-left: 15%;">
                                @Html.DisplayFor(model => model.EmployeeAddress)
                            </dd>
                            <!-- Field EmployeePhone -->
                            <dt style="width: 200px;">
                                @Html.DisplayNameFor(model => model.EmployeePhone)
                            </dt>
                            <dd style="margin-left: 15%;">
                                @Html.DisplayFor(model => model.EmployeePhone)
                            </dd>
                            <!-- Field EmployeePersonalPhone -->
                            <dt style="width: 200px;">
                                @Html.DisplayNameFor(model => model.EmployeePersonalPhone)
                            </dt>
                            <dd style="margin-left: 15%;">
                                @Html.DisplayFor(model => model.EmployeePersonalPhone)
                            </dd>
                            <!-- Field EmployeeEmail -->
                            <dt style="width: 200px;">
                                @Html.DisplayNameFor(model => model.EmployeeEmail)
                            </dt>
                            <dd style="margin-left: 15%;">
                                @Html.DisplayFor(model => model.EmployeeEmail)
                            </dd>
                            <!-- Field EmployeeSkype -->
                            <dt style="width: 200px;">
                                @Html.DisplayNameFor(model => model.EmployeeSkype)
                            </dt>
                            <dd style="margin-left: 15%;">
                                @Html.DisplayFor(model => model.EmployeeSkype)
                            </dd>
                            <!-- Field DateAdoption -->
                            <dt style="width: 200px;">
                                @Html.DisplayNameFor(model => model.DateAdoption)
                            </dt>
                            <dd style="margin-left: 15%;">
                                @Html.DisplayFor(model => model.DateAdoption)
                            </dd>
                            <!-- Field DateDismissal -->
                            <dt style="width: 200px;">
                                @Html.DisplayNameFor(model => model.DateDismissal)
                            </dt>
                            <dd style="margin-left: 15%;">
                                @Html.DisplayFor(model => model.DateDismissal)
                            </dd>                          
                        </dl>
                    </div>
                    <!-- Buttons Edit and Back -->
                    <p>
                        <a class="btn btn-default" name="editButton" id="editButton" href="@Url.Action("Edit","Employee", new {id = Model.EmployeeId})">Редактировать</a> |
                        <a class="btn btn-default" name="backButton" id="backButton" href="@Url.Action("Index","Employee")">Назад</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>