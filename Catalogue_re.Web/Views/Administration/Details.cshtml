@model Catalogue_re.Web.Models.ViewModels.AdministrationVM

@{
    ViewBag.Title = "Просмотр органа управления";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="header">
                    <h2>Просмотр административного органа управления</h2>
                </div>
                <div class="content">
                    <div>
                        <hr />
                        <dl class="dl-horizontal">
                            <!-- Field DivisionName -->
                            <dt style="width:200px;">
                                @Html.DisplayNameFor(model => model.Division.Name)
                            </dt>
                            <dd style="margin-left:15%;">
                                @Html.DisplayFor(model => model.Division.Name)
                            </dd>
                            <!-- Field AdministrationName -->
                            <dt style="width:200px;">
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>
                            <dd style="margin-left:15%;">
                                @Html.DisplayFor(model => model.Name)
                            </dd>                          
                            <!-- Field AdministrationPost -->
                            <dt style="width:200px;">
                                @Html.DisplayNameFor(model => model.Post)
                            </dt>
                            <dd style="margin-left:15%;">
                                @Html.DisplayFor(model => model.Post)
                            </dd>
                            <!-- Field AdministrationAddress -->
                            <dt style="width:200px;">
                                @Html.DisplayNameFor(model => model.Address)
                            </dt>
                            <dd style="margin-left:15%;">
                                @Html.DisplayFor(model => model.Address)
                            </dd>
                            <!-- Field AdministrationFax -->
                            <dt style="width:200px;">
                                @Html.DisplayNameFor(model => model.Fax)
                            </dt>
                            <dd style="margin-left:15%;">
                                @Html.DisplayFor(model => model.Fax)
                            </dd>
                            <!-- Field AdministrationEMail -->
                            <dt style="width:200px;">
                                @Html.DisplayNameFor(model => model.Email)
                            </dt>
                            <dd style="margin-left:15%;">
                                @Html.DisplayFor(model => model.Email)
                            </dd>
                            <!-- Field AdministrationSkype -->
                            <dt style="width:200px;">
                                @Html.DisplayNameFor(model => model.Skype)
                            </dt>
                            <dd style="margin-left:15%;">
                                @Html.DisplayFor(model => model.Skype)
                            </dd>
                            <!-- Field AdministrationCode -->
                            <dt style="width:200px;">
                                @Html.DisplayNameFor(model => model.Code)
                            </dt>
                            <dd style="margin-left:15%;">
                                @Html.DisplayFor(model => model.Code)
                            </dd>

                        </dl>
                    </div>
                    <!-- Buttons Edit and Back -->
                    <p>
                        <a class="btn btn-default" name="editButton" id="editButton" href="@Url.Action("Edit","Administration", new {id = Model.Id})">Редактировать</a> |
                        <a class="btn btn-default" name="backButton" id="backButton" href="@Url.Action("Index","Administration")">Назад</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>