<!doctype html>
<html>
<head>

    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="icon" type="image/png" href=@Url.Content("~/favicon.png") />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>@ViewBag.Title - Справочник</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap core CSS     -->
    @Styles.Render("~/Content/bootstrap.min.css")

    @Styles.Render("~/Content/app.css")

    @Styles.Render("~/Content/Site.css")
    <!--  Light Bootstrap Table core CSS    -->
    @Styles.Render("~/Content/assets/css/light-bootstrap-dashboard.css")


    <!--  CSS for Purpose, don't include it in your project     -->
    @Styles.Render("~/Content/assets/css/demo.css")

    <!--     Fonts and icons     -->

    <link href="~/fonts/font-awesome-4.7.0/css/font-awesome.css" rel="stylesheet">
    @Styles.Render("~/Content/assets/css/pe-icon-7-stroke.css")
</head>
<body>
    <div class="wrapper">
        <div class="sidebar" data-color="black" data-image="@Url.Content("~/Content/assets/img/sidebar.jpg")">
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="@Url.Action("Index", "Home")" class="simple-text">
                        Справочник НСК/ГВЦ
                    </a>
                </div>
                <ul class="nav">
                    <li class="active">
                        <a href="@Url.Action("Index", "Division")">
                            <i class="pe-7s-global"></i>
                            <p>Административные деления</p>
                        </a>
                    </li>
                    <li class="active">
                        <a href="@Url.Action("Index", "Administration")">
                            <i class="pe-7s-culture"></i>
                            <p>Органы управления</p>
                        </a>
                    </li>
                    <li class="active">
                        <a href="@Url.Action("Index", "Department")">
                            <i class="pe-7s-home"></i>
                            <p>Отделы</p>
                        </a>
                    </li>
                    <li class="active">
                        <a href="@Url.Action("Index", "Position")">
                            <i class="pe-7s-id"></i>
                            <p>Должности</p>
                        </a>
                    </li>
                    <li class="active">
                        <a href="@Url.Action("Index", "Employee")">
                            <i class="pe-7s-users"></i>
                            <p>Сотрудники</p>
                        </a>
                    </li>
                    
                        <li class="active">
                            <a href="@Url.Action("Register", "Account")">
                             <i class="pe-7s-add-user"></i>
                                 <p>Добавить пользователя</p>
                            </a>
                        </li> 
                    
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <nav class="navbar navbar-default navbar-fixed">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Главная", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="collapse navbar-collapse">

                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </nav>

            <div class="content">
                @RenderBody()
            </div>

            <footer class="footer">
                <div class="container-fluid">

                    @if (DateTime.Now.Year == 2018)
                {
                    <p class="copyright pull-right">&copy; @DateTime.Now.Year Отдел программирования ГВЦ</p> }
            else
            {
                        <p class="copyright pull-right">&copy; 2018 - @DateTime.Now.Year Отдел программирования ГВЦ</p>}

                </div>

            </footer>
        </div>


    </div>
    <!--   Core JS Files   -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.js")
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    

    <script src="@Url.Content("~/Content/assets/js/bootstrap.min.js")" type="text/javascript"></script>

    <!-- Light Bootstrap Table Core javascript and methods for Demo purpose -->
    <script src="@Url.Content("~/Content/assets/js/light-bootstrap-dashboard.js?v=1.4.0")"></script>

    <!-- Light Bootstrap Table DEMO methods, don't include it in your project! -->
    <script src="@Url.Content("~/Content/assets/js/demo.js")"></script>
    <script src="@Url.Content("~/Scripts/pagination.js")"></script>

    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/app.js")
    @RenderSection("scripts", required: false)
    </body>
</html>